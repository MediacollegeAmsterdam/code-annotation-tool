{
  "name": "cat",
  "displayName": "CAT",
  "description": "an extension that shows a webview with ai explanation of highlighted code with the click of a button",
  "version": "0.1.2",
  "author": "julien oving",
  "publisher": "XRlabAI",
  "repository": {
    "url": "https://github.com/MediacollegeAmsterdam/code-annotation-tool"
  },
  "icon": "catpfp.jpg",

  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cat.explainCode",
        "title": "Explain Code in a chart"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cat.explainCode",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ollama": "^0.6.3"
  }
}
